<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 公共ActionBar ImageView样式 -->
    <style name="app_common_actionbar_imageStyle">
        <item name="android:clickable">true</item>
    </style>
    <!-- 公共ActionBar Text样式 -->
    <style name="app_common_actionbar_textStyle">
        <item name="android:textSize">@dimen/app_common_actionbar_textSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">true</item>
    </style>
    <!-- 添加笔记底部样式 -->
    <style name="note_add_bottom_textStyle">
        <item name="android:textSize">@dimen/note_add_bottom_textSize</item>
        <item name="android:textColor">@color/note_add_bottom_textColor</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 添加笔记工具布局弹出动画样式 -->
    <style name="note_add_bottom_tools_animStyle">
        <item name="android:windowEnterAnimation">@anim/note_add_bottom_tools_enter</item>
        <item name="android:windowExitAnimation">@anim/note_add_bottom_tools_exit</item>
    </style>
    <!-- 添加笔记工具布局导航文本样式 -->
    <style name="note_add_bottom_tools_navigation_textStyle">
        <item name="android:textSize">@dimen/note_add_bottom_tools_navigation_textSize</item>
        <item name="android:textColor">@color/note_add_bottom_tools_navigation_norTextColor</item>
        <item name="android:paddingTop">@dimen/note_add_bottom_tools_navigation_text_paddingTop</item>
        <item name="android:paddingRight">@dimen/note_add_bottom_tools_navigation_text_paddingRight</item>
        <item name="android:paddingBottom">@dimen/note_add_bottom_tools_navigation_text_paddingBottom</item>
        <item name="android:paddingLeft">@dimen/note_add_bottom_tools_navigation_text_paddingLeft</item>
    </style>
    <!-- 添加笔记工具布局字体样式设置样式 -->
    <style name="note_add_bottom_tools_font_style_textStyle">
        <item name="android:textSize">@dimen/note_add_bottom_tools_font_style_textSize</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:textColor">@color/note_add_bottom_tools_font_style_textColor</item>
    </style>
    <!-- 编辑框公共样式 -->
    <style name="input_style">
        <item name="android:background">@drawable/app_common_et_bg</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- 输入用户名EditText样式 -->
    <style name="input_username_style" parent="@style/input_style">
        <item name="android:hint">@string/username</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">10</item>
    </style>    
    <!-- 输入手机号EditText样式 -->
    <style name="input_phone_style" parent="@style/input_style">
        <item name="android:hint">@string/phone</item>
        <item name="android:inputType">phone</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">15</item>
    </style>
    <!-- 输入密码EditText样式 -->
    <style name="input_password_style" parent="@style/input_style">
        <item name="android:hint">@string/password</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">20</item>
    </style>
    <!-- 输入验证码EditText样式 -->
    <style name="input_validatecode_style" parent="@style/input_style">
        <item name="android:hint">@string/validate_code</item>
        <item name="android:inputType">number</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">6</item>
    </style>
    <!-- 按钮公共样式 -->
    <style name="button_style">
        <item name="android:background">@drawable/app_common_button_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- 提示TextView公共样式 -->
    <style name="tip_style">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    
    
    
</resources>
