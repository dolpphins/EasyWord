<?xml version="1.0" encoding="utf-8"?>

<!-- 
	笔记列表Item布局

 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" xmlns:app="http://schemas.android.com/apk/res/com.mao.easyword">
    
    <!-- 标题 -->
	<TextView 
	    android:id="@+id/note_list_item_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="@dimen/note_list_item_title_textSize"
	    android:textColor="@color/note_list_item_title_textColor"
	    android:lines="1"
	    android:ellipsize="end"/>
	<!-- 内容 -->
	<com.mao.widget.EmojiTextView
	    android:id="@+id/note_list_item_content"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="@dimen/note_list_item_content_textSize"
	    android:textColor="@color/note_list_item_content_textColor"
	    android:layout_marginTop="@dimen/note_list_item_content_marginTop"
	    android:layout_marginBottom="@dimen/note_list_item_content_marginBottom"
	    app:emojiSize="@dimen/note_list_item_content_emojiSize"
	    android:maxLines="2"
	    android:ellipsize="end"/>
	<!-- 最后一次修改日期 -->
	<TextView 
	    android:id="@+id/note_list_item_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textSize="@dimen/note_list_item_time_textSize"
	    android:textColor="@color/note_list_item_time_textColor"
	    android:lines="1"/>
	
</LinearLayout>
